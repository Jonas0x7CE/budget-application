@using Budget_Application.Components.Layout
@inherits LayoutComponentBase
@layout MainLayout

<div class="flex justify-center items-start sm:min-h-screen overflow-auto mt-3 mx-3 sm:mt-6 sm:mx-6">
    <div class="w-full max-w-4xl bg-zinc-800 inset-ring inset-ring-gray-700/50 rounded-lg shadow-lg p-6 text-white">
        <h1 class="font-semibold text-2xl mb-6">Manage your account</h1>
        
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <div class="lg:col-span-1">
                <div class="bg-zinc-700 rounded-lg p-4">
                    <h2 class="text-lg font-medium mb-4">Account settings</h2>
                    <ManageNavMenu/>
                </div>
            </div>
            <div class="lg:col-span-3">
                <div class="bg-zinc-700 rounded-lg p-4">
                    @Body
                </div>
            </div>
        </div>
    </div>
</div>